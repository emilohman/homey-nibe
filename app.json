    "en": [ "nibe", "heat pump", "climte" ]
  },
  "category": [
    "climate"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Emil Öhman",
    "email": "emilohman@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Emil Öhman",
        "email": "emilohman@gmail.com"
      }
    ]
  },
  "capabilities": {
    "speed": {
      "type": "number",
      "title": {
        "en": "Speed"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "units": {
        "en": "%"
      },
      "icon": "/assets/velocity.svg"
    },
    "percentage": {
      "type": "number",
      "title": {
        "en": "Percent"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "units": {
        "en": "%"
      },
      "icon": "/assets/percentage.svg"
    },
    "degree_minutes": {
      "type": "number",
      "title": {
        "en": "Degree minutes",
        "sv": "Gradminuter"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "units": {
        "en": "DM",
        "sv": "GM"
      },
      "icon": "/assets/degree_minutes.svg"
    },
    "blocked": {
      "type": "boolean",
      "title": {
        "en": "Blocked",
        "sv": "Blockerad"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "icon": "/assets/blocked.svg"
    },
    "counter": {
      "type": "number",
      "title": {
        "en": "Starts",
        "sv": "Starter"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "icon": "/assets/counter.svg"
    },
    "time": {
      "type": "number",
      "title": {
        "en": "Time",
        "sv": "Tid"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "units": {
        "en": "h",
        "sv": "h"
      },
      "icon": "/assets/time.svg"
    },
    "frequency": {
      "type": "number",
      "title": {
        "en": "Time",
        "sv": "Tid"
      },
      "uiComponent": "sensor",
      "chartType": "spline",
      "getable": true,
      "setable": false,
      "units": {
        "en": "hz",
        "sv": "hz"
      },
      "icon": "/assets/frequency.svg"
    },
    "smart_home": {
      "type": "enum",
      "title": {
        "en": "Smart home",
        "sv": "Smart hem"
      },
      "values": [
        {
          "id": "home",
          "title": {
            "en": "Home",
            "sv": "Hemma"
          }
        },
        {
          "id": "away",
          "title": {
            "en": "Away",
            "sv": "Iväg"
          }
        },
        {
          "id": "vacation",
          "title": {
            "en": "Vacation",
            "sv": "Semester"
          }
        }
      ],
      "uiComponent": null,
      "getable": false,
      "setable": false
    }
  },
